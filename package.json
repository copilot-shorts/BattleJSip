{
  "name": "battleship",
  "version": "1.0.0",
  "description": "Battleship case study for scrum.org PSD training",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack -p",
    "serve": "http-server dist/ -o -p 5000",
    "lint": "npm run eslint && npm run tslint",
    "eslint": "eslint . --ext js,jsx --fix",
    "tslint": "tslint --config tslint.json --project tsconfig.json",
    "test": "jest --watch",
    "test-ci": "jest --ci --coverage"
  },
  "authors": [
    "Frank van Wijk <fvanwijk@xebia.com>",
    "Ruben Oostinga <roostinga@xebia.com>"
  ],
  "dependencies": {
    "http-server": "^0.11.1",
    "react": "16.3.1",
    "react-dom": "16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.13",
    "babel-core": "6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "jest-junit": "^3.7.0",
    "prettier": "^1.11.1",
    "style-loader": "^0.20.3",
    "ts-jest": "^22.4.4",
    "ts-loader": "^4.2.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "1.2.4",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.3"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "html",
      "cobertura"
    ],
    "testResultsProcessor": "jest-junit",
    "transform": {
      "^.+\\.[tj]sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
